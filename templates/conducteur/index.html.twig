{% extends 'base.html.twig' %}

{% block title %}Conducteur index{% endblock %}

{% block body %}
    <h1>Conducteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conducteur in conducteurs %}
            <tr>
                <td>{{ conducteur.id }}</td>
                <td>{{ conducteur.email }}</td>
                <td>{{ conducteur.roles ? conducteur.roles|json_encode : '' }}</td>
                <td>{{ conducteur.password }}</td>
                <td>
                    <a href="{{ path('app_conducteur_show', {'id': conducteur.id}) }}">show</a>
                    <a href="{{ path('app_conducteur_edit', {'id': conducteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conducteur_new') }}">Create new</a>
{% endblock %}
